<p style="color: green"><%= notice %></p>

<h1>Customers</h1>

<div id="customers">
  <table class="w-100 table table-striped table-light table-hover table-bordered">
    <thead class="thead-light">
      <tr>
        <th style="width:20%">Name</th>
        <th style="width:30%">Email</th>
        <th style="width:40%">Address</th>
        <th style="width:10%"> </th>
      </tr>
    </thead>
    <tbody>
      <% @customers.each do |customer| %>
        <tr>
          <td><%= link_to customer.name, customer, class:"text-black" %></td>
          <td><%= customer.email %></td>
          <td><%= customer.address %></td>
          <%# turbo rails not working %>
          <td>
            <%= button_to 'Delete', customer, 
                    method: :delete, 
                    onclick: "return confirmDestroy('Are you sure want destroy this customer?')", 
                    class: "btn btn-outline-danger btn-sm text-black" %>
          </td> 
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>
<%= link_to "New customer", new_customer_path, class: "btn btn-secondary" %>
