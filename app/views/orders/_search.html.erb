<div class="offcanvas offcanvas-start text-black" tabindex="-1" id="offcanvasExample" aria-labelledby="offcanvasExampleLabel">
  <div class="offcanvas-header">
    <h5 class="offcanvas-title" id="offcanvasExampleLabel">Search Order</h5>
    <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
  </div>
  <div class="offcanvas-body">
    <%= search_form_for q do |f| %>
      <div class="form-group">
        <%= f.label :by_customer_name_or_customer_email_cont, class: "form-label" %>
        <%= f.search_field :customer_name_or_customer_email_cont, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :by_order_details_menu_name_cont, class: "form-label" %>
        <%= f.search_field :order_details_menu_name_cont, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :by_total_price_min, class: "form-label" %>
        <%= f.number_field :total_price_gteq, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :by_total_price_max, class: "form-label" %>
        <%= f.number_field :total_price_lteq, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :by_order_date_greater_than, class: "form-label" %>
        <%= f.date_field :created_at_gteq, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :by_order_date_less_than, class: "form-label" %>
        <%= f.date_field :created_at_lteq, class: "form-control" %>
      </div>
      <br>
      <div class="form-group">
        <%= f.submit class: "btn btn-primary" %>
        <%= link_to "reset", orders_path, class:"btn btn-outline-primary" %>
      </div>
    <% end %>
  </div>
</div>
